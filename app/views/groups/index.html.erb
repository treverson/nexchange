<h1>All the groups</h1>
<%= link_to 'New group', new_group_path %>
<%= link_to 'Projects', projects_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Users Count</th>
    <th>Projects Count</th>
  </tr>
  <% @groups.each do |group| %>
    <tr>
      <td><%= group.title %></td>
      <td><%= group.description %></td>
      <td><%= group.users.count %></td>
      <td><%= group.projects.count %></td>
      <td><%= link_to 'Show', group_path(group) %></td>
      <td><%= link_to 'Add me', group_add_user_path(group), method: :post %></td>
      <td><%= link_to 'Remove me', group_remove_user_path(group), method: :post %></td>
      <td><%= link_to 'Edit', edit_group_path(group) %></td>
      <td><%= link_to 'Destroy', group_path(group),method: :delete,data: { confirm: 'Are you sure?' } %></td>
    <tr>
  <% end %>
</table>
